#!/bin/bash

source $( which comma-application-util )
function output { csv-paste value="line[" line-number value="]\=" --delimiter '@' - | sed 's/@//g'; }

function process_records
{
    python -c "$( cat <<END
import comma
import numpy

point_t = comma.csv.struct( 'x,y,mask', 'float64', 'float64', 'uint32' )
stream = comma.csv.stream( point_t, fields='x,name,y,mask' )

for points in stream.iter(size=3):
  # changes below should not affect dump as it uses internal buffers
  points['x'] = points['x'] + 1
  points['y'] = points['y'] + 1
  mask = points['mask'].astype('bool')
  stream.dump(mask=mask)
END
)"
}

process_records | output
comma_status_ok
echo "status=$?"
